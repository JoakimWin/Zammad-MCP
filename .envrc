# Load ZAMMAD_ADMIN_API_TOKEN from Infisical and export as ZAMMAD_HTTP_TOKEN
export ZAMMAD_HTTP_TOKEN=$(infisical secrets get ZAMMAD_ADMIN_API_TOKEN --path=/API-keys --plain 2>/dev/null)

export ZAMMAD_URL=${ZAMMAD_URL:-http://dockervm.homelab.net:8880}

# Optional: Show a message when the environment is loaded
if [ -n "$ZAMMAD_HTTP_TOKEN" ]; then
    echo "✓ ZAMMAD_HTTP_TOKEN loaded from Infisical"
else
    echo "⚠ Failed to load ZAMMAD_HTTP_TOKEN from Infisical"
fi